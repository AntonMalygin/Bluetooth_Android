<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <Switch
        android:id="@+id/switch_enable_bt"
        android:text="@string/bluetooth_on_off"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/frame_message"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_message"
            android:text="@string/bluetooth_off"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/frame_control"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_enable_search"
            android:layout_marginTop="8dp"
            android:text="@string/start_search"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/pb_progress"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:indeterminate="true"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/lv_bt_device"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/frameLedControls"
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/disconnect" />

        <TextView
            android:id="@+id/Temp_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_disconnect"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:textSize="22sp"

            android:text="@string/Temp_in" />

     <TextView
         android:id="@+id/Dig_Temp_in"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/btn_disconnect"
         android:layout_marginStart="250sp"
         android:layout_marginTop="14dp"
         android:textSize="22sp"/>

        <TextView
            android:id="@+id/Temp_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Temp_in"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:textSize="22sp"
            android:text="@string/Temp_out" />

        <TextView
            android:id="@+id/Dig_Temp_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dig_Temp_in"
            android:layout_marginStart="250sp"
            android:layout_marginTop="14dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/Pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Temp_out"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:textSize="22sp"
            android:text="@string/Pressure_out" />

        <TextView
            android:id="@+id/Dig_Press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Dig_Temp_out"
            android:layout_marginStart="250sp"
            android:layout_marginTop="14dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Pressure"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:textSize="22sp"
            android:text="@string/Time" />

        <TextView
            android:id="@+id/Dig_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Pressure"
            android:layout_marginStart="150dp"
            android:layout_marginTop="14dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Time"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:textSize="22sp"
            android:text="@string/Date" />

        <TextView
            android:id="@+id/Dig_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Dig_Time"
            android:layout_marginStart="150dp"
            android:layout_marginTop="14dp"
            android:textSize="20sp"/>

        <Button
            android:textStyle="bold"
            android:id="@+id/Clock_sinx"
            android:layout_below="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/sinx_time" />

        <TextView
            android:id="@+id/sys_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Clock_sinx"
            android:layout_marginStart="70dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"/>


    </RelativeLayout>

</LinearLayout>
